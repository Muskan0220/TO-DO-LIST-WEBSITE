<%- include('header'); -%>
  <div class="box" id="heading">
    <h1><%= whatday %></h1>
  </div>
  <div class="box">
    <% newitem.forEach(function(item){ %>
      <form action="/delete" method="post" >
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
          <p>
            <%= item.name %>
          </p>
        </div>
        <input type="hidden" name="listname" value="<%=whatday %>">
      </form>
    <% }) %>
    <form class="item" action="/" method="post">
      <input type="text" name="new" placeholder="NEW ITEM" autocomplete="off">
      <button type="submit" name="add" value="<%=whatday%>">+</button>
    </form>
  </div>
<%- include('footer'); -%>
